#!/usr/bin/env bash
echo "------> Installing Mysql 5.1"
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

cd $BUILD_DIR
# download the minimal mysql tar file
echo "------> Downloading minimized tarball"
wget https://reprally.nyc3.digitaloceanspaces.com/buildpack/mysqldump
# make a directory to untar (like unzip) the binary
mkdir -p $BUILD_DIR/.heroku/mysql
# untar the binary to a directory inside /app/.heroku
tar -C $BUILD_DIR/.heroku/mysql -xvf mysql.tar.gz
# remove the tar file
rm -f mysql.tar.gz
